<!-- desktop -->
<div class="title-card" style="background-image:url('/img/<%- post.slug %>/card-default.png')">
    <div class="card-info">
        <div class="card-event">
            <% for (var event in site.data.events) { %>
                <% if (site.data.events[event].name == post.event) { %>
                    <a href="/categories/<%- site.data.events[event].slug %>"><%- post.event %></a>
                <% } %>
            <% } %>
        </div>
        <div class="card-focus"><%= post.focus %></div>
    </div>
    <div class="card-content">
        <h1><a href="<%- url_for(post.path) %>"><%= post.title %></a></h1>
        <div class="card-tags">
            <% for (var i = 0; i < post.heroes.length; i++) { %>
                <% for (var chara in site.data.heroes) { %>
                    <% if (site.data.heroes[chara].name == post.heroes[i]) { %>
                        <a href="<%- site.data.heroes[chara].tag %>"><img src="https://res.cloudinary.com/kisu/image/upload/<%- site.data.heroes[chara].chibi %>"></a>
                    <% } %>
                <% } %>
            <% } %>
        </div>
        <div class="card-category">
            <span><%= post.excerpt %></span>
        </div>
    </div>
    <!-- read more button; HIDE OFF INDEX -->
    <a href="<%- url_for(post.path) %>" class="card-btn"><span>Read More ></span></a>
</div>

